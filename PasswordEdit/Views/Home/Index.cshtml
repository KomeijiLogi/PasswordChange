@{
    Layout = null;

}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1,maximum-scale=1,user-scalable=no" />
    <title></title>


</head>

<body>
    @Styles.Render("~/Content/loadingcss")
    @Styles.Render("~/Content/muicss")
    @Styles.Render("~/Content/blur")
    <div class="mui-content" style="background-color:white;margin-top:0;">
     
        <form action="/Home/Index" method="post" style="height:auto;">
            <input name="userName" type="hidden" value="@ViewData["userName"]" />
            <h5 style="margin-left:10px;padding:5px;font-size:16px;">当前密码</h5>
            <div class="mui-row mui-password" style="margin-right:10px;margin-left:10px;">
                <input id="oldPw" type="password" class="mui-input-password" name="oldPw" style="border-top:none;border-left:none;border-right:none;" placeholder="请输入旧密码" />

            </div>

            <h5 style="margin-left:10px;padding:5px;font-size:16px;">新密码</h5>
            <div class="mui-row mui-password" style="margin-right:10px;margin-left:10px;">
                <input id="newPw" type="password" class="mui-input-password" name="newPw" placeholder="请输入新密码" style="border-top:none;border-left:none;border-right:none;" />
            </div>
            <h5 style="margin-left:10px;padding:5px;font-size:16px;">确认密码</h5>
            <div class="mui-row mui-password " style="margin-right:10px;margin-left:10px;">
                <input id="newPw_twice" type="password" class="mui-input-password" name="newPw_twice" placeholder="请再次确认新密码" style="border-top:none;border-left:none;border-right:none;" />
            </div>
            <div class="mui-button-row" style="margin-right:10px;margin-left:10px;height:50px;margin-top:10px;">
                <button type="button" class="mui-btn mui-btn-primary" id="confirmPw"  style="width:100%;height:100%;font-size:18px;" onclick="clickEvent()">更改密码</button>&nbsp;&nbsp;
                @*<button type="reset" class="mui-btn mui-btn-danger" style="width:40%;">重置</button>*@
            </div>
            <br/>
            <label id="pw_msg" style="margin:20px">
                @ViewData["msg"]                
            </label>
            <div style="padding:10px;">
                <p>注意：威高邮箱密码与云之家密码会同时更改。</p>
            </div>
        </form>
        <div id="loadingAnimate" class="box" style="z-index:999999;position:fixed;top:0;display:none;">
            <div class="loader">
                <div class="loading">
                    <i></i>
                    <i></i>
                    <i></i>
                    <i></i>
                    <i></i>
                    <i></i>
                    <i></i>
                    <i></i>
                </div>
            </div>
        </div>

    </div>
    @Scripts.Render("~/bundles/jquery")
   

    @Scripts.Render("~/bundles/mui")
   
    @Scripts.Render("~/bundles/login")
  
</body>
</html>
